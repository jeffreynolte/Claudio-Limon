doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml', xmlns:fb='https://www.facebook.com/2008/fbml', itemscope='itemscope', itemtype='http://schema.org/Product')
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1, minimum-scale=1, width=device-width')
   

  title .: Claudio Limon :.
  meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
  meta(name="keywords", content="")
  meta(name="description", content="Claudio Limon - Mexican Artist")

  link(href='/img/icons/favicon.ico', rel='shortcut icon', type='image/x-icon')
  link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Asap:400,700,400italic,700italic', type='text/css')
  link(rel='stylesheet', href='/vendor/flexslider/flexslider.css')
  link(rel="stylesheet", href="/css/main-public.css")

  //if lt IE 9
    script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
  body(ng-app="app", ng-class="{{bodyClass}}", class="public {{bodyClass}}")
    div.nav-wrapper
      div.navigationwrap(ng-controller='mainCtrl')
        div.navigation
          h1
            a(href='/') Claudio Limon
          a.mobile-nav-toggle(href ng-click='toggleMobileNav()') Show mobile Nav          
            div
            div
            div
          .nav-wrapper-inner(ng-hide="hideMobileNav")
            nav.social
              ul
                li.facebook
                  a(href="{{settings.facebook_url}}", title="Facebook") f
                li.behance
                  a(href="{{settings.behance_url}}", title="Behance") be
            nav
              ul
                li
                  a(href="/") home
                li
                  a(href="/work") work
                li
                  a(href="/about") about
                li
                  a(href ng-click='toggleContact()') contact
          .contact-container(ng-hide='hideContact')
            a.close-form(ng-hide="hideMobileNav", ng-click="toggleContact()") X
            p Contact Claudio
            form(name="sendInquiryForm", ng-controller='clInquiriesCtrl')
              input(name="sender_name", id="sender_name", ng-model="sender_name", type="text", placeholder="* Name", required)

              input(name="sender_email", id="sender_email", ng-model="sender_email", type="text", placeholder="* Email", required)

              textarea(name="sender_message", id="sender_message", ng-model="sender_message", type="text", placeholder="* Message", required)

              button(id="submit-inquiry", type="submit", ng-click="createInquiry()", ng-disabled="sendInquiryForm.$invalid") Send

            .social
              ul
                li.facebook
                  a(href="{{settings.facebook_url}}", title="Facebook") f
                li.twitter
                  a(href="{{settings.twitter_url}}", title="Twitter") t
                li.behance
                  a(href="{{settings.behance_url}}", title="Behance") be

    section.content(ng-controller="mainCtrl")
      section.container
        block main-content
    include scripts
