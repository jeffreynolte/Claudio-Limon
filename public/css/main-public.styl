body
  font-family: 'Asap', sans-serif;
body.public
  background: #eee;
  color:#fff;
  height:100%;
  overflow:hidden;
  margin: 0;
  a
    color:#fff;
    text-decoration: none;
  .navigation
    width:100%;
    height:auto;
    background:#000;
    float:left;
    padding:10px 0;
    position:fixed;
    z-index:9999;
    top:0;
    h1
      float:left;
      width:40%;
      margin:0;
      text-indent:20px;
      font-size: 24px;
      text-transform: uppercase;
    nav
      float:right;
      margin-top: 4px;
      ul
        padding:0;
        display:inline;
        li
          display:inline-block;
          float:left;
          margin: 0 13px;
    .social
      margin-right:10px;
      margin-top: 0;
      ul
        li
          margin: 0 4px;
          a
            color:#000;
            background:#fff;
            color: #000;
            border-radius: 20px;
            width: 27px;
            display: block;
            height: 27px;
            line-height: 27px;
            text-align: center;
            margin-left: 8px;
      .behance
        text-transform:capitalize;
        text-indent:2px;

.info
  position: absolute;
  top: 40%;
  z-index: 999;
  width: 100%;
  text-align: center;
  h1.logo
    height: 76px;
    position: relative;
    background: url("../img/logo.png") 50% 50% no-repeat;
    text-indent: -999em;

  span
    width:100%;
    display:block;
    font-style: italic;
    text-shadow: 1px 1px 0px #000;
    font-size: 20px;
    letter-spacing: 1px;

.home-links
  position: absolute;
  z-index: 999;
  bottom: 30px;
  width: 100%;
  text-align: center;
  ul
    list-style-type: none;
    padding: 0;
    display: inline;
    li
      display:inline-block;
      a
        font-size: 24px;
        letter-spacing: 1px;
        padding: 10px 15px;
        border: 1px solid #FFF;
        margin: 0 5px;


.about-content
  position: absolute;
  top: 200px;
  z-index: 999;
  width: 100%;
  p
    width: 400px;
    margin: 15px auto;
    text-align: justify;

  .social
    width: 400px;
    margin: 0 auto;
    ul
      list-style-type: none;
      display: inline;
      padding: 0;
      li
        display: inline-block;
        text-align: right;
        a
          color:#000;
          background:#fff;
          color: #000;
          border-radius: 20px;
          width: 24px;
          display: block;
          height: 24px;
          line-height: 24px;
          text-align: center;
          margin-left: 8px;
          font-size: 12px;

      .email
        float: left;
        a
          color: #FFF;
          background: none;
          border-radius: none;
          width: inherit;
          display: block;
          height: inherit;
          text-decoration: underline;
          margin-left: 0;
          margin-right: 237px;
          font-size: 14px;


.detail-content
  position: absolute;
  top: 200px;
  z-index: 999;
  width: 400px;
  right: 100px;
  .detail-content-box
    header
      background: rgba(255,255,255,0.7);
      color: #000;
      width: 100%;
      float: left;
      padding: 15px 15px;
      h3
        float: left;
        font-size: 18px;
        margin: 0;

      h4
        float: left;
        margin: 0;

      i.info
        position: absolute;
        right: -24px;
        top: 0;
        width: 50px;
        height: 49px;
        border-radius: 40px;
        line-height: 49px;
        background: #000;
        color: #FFF;
        font-size: 22px;
    .detail-content-text
      background: rgba(0,0,0,0.8);
      padding: 20px 15px;
      float: left;
      p
        margin-bottom: 15px;

      q
        margin-bottom: 15px;
        display: block;


.work-content
  z-index: 999;
  width: 1455px;
  margin: 65px auto;
  .work-block
    width: 425px;
    height: 240px;
    background: #000;
    float: left;
    display:inline-block;
    margin: 27px;
    position: relative;
    figcaption
      bottom: 0;
      left: 0;
      position: absolute;
      width: 100%;
      background: #000;
      color: #FFF;
      padding: 10px;
      h4
        margin: 0;
        font-size: 12px;



.contact-container
  position: absolute;
  right: 0;
  top: 46px;
  width: 290px;
  height: 372px;
  z-index: 1000;
  background: #FFFFFF;
  padding-left: 20px;
  opacity: 1;
  p
    color: #9C9F9E;

  input
    width: 250px;
    margin-bottom: 18px;
    background: #E2E4E3;
    border:none;
    padding: 8px;

  textarea
    width: 250px;
    margin-bottom: 18px;
    background: #E2E4E3;
    border:none;
    padding: 8px;
    height: 135px;
    resize: none;
  &.ng-hide-add,
  &.ng-hide-remove
    transition: 0.5s linear all;
    -webkit-transition: 0.5s linear all;
    display: block !important;
  &.ng-hide
    opacity: 0;
    top: -600px;

.flexslider
  margin:0;
  border: none;
  .slides
    margin:0;
    padding:0;
    img
      margin:0;
      padding:0;
      width:100%;
      height:100%;
  .flex-control-nav
    top: 560px;
    z-index: 900;
    li
      a
        border: 1px solid #FFF;
        box-shadow: none;
        background: rgba(0,0,0,0);
        width: 12px;
        height: 12px;
      .flex-active
        background: #FFF;

