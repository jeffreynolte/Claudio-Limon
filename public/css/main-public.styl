html
  -webkit-text-size-adjust: none;
body
  font-family: 'Asap', sans-serif;

body.public.home
  background: url('../img/web-limon-01.jpg') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

body.public.about
  background: url('../img/limon-about.jpg') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
    
body.public
  background: #eee;
  color:#fff;
  height:100%;
  overflow:hidden;
  margin: 0;    
  a
    color:#fff;
    text-decoration: none;
  .nav-wrapper
    position: relative
    height: 34px
  .navigation
    width:100%;
    height:35px;
    background:#000;
    float:left;
    padding:0;
    position:fixed;
    z-index:9999;
    top:0;
    h1
      margin:6px 0 0 10px
      float:left
      padding:0
      a
        display:block
        text-indent:-9999px;
        width:155px
        height:20px
        background: url("../img/web-limon.png") no-repeat;
    nav
      float:right;
      margin-top: 4px;
      font-size:14px;
      font-style:italic;
      line-height:23px;
      ul
        padding:0;
        display:inline;
        li
          display:inline-block;
          float:left;
          margin: 0 13px;
          a:hover
            color:#EEE
            text-decoration:underline
    .social
      margin-right:10px;
      margin-top: 0;
      ul
        li
          margin: 0 4px;
          a
            color: #000;
            background: #fff;
            color: #000;
            border-radius: 21px;
            width: 22px;
            display: block;
            height: 21px;
            line-height: 22px;
            margin-left: 0px;
            font-style: normal;
            font-size: 12px;
            text-align: center;
            margin-top: 6px;
            &:hover
              opacity:.7
              color:#000
              text-decoration:none
      .behance
        text-transform:capitalize;
  .contact-container        
    .ng-invalid
      button
        opacity:.5      
  .contact-container
    position: absolute;
    right: 0;
    top: 33px;
    width: 290px;
    height: 372px;
    z-index: 1000;
    background: #FFFFFF;
    padding-left: 20px;
    opacity: 1;
    p
      color: #9C9F9E;
    .social
      margin: 0;
      display: inline-block;
      float: right;
      position: relative;
      bottom: 30px;
      right: 20px;
      ul
        padding: 0;
        margin: 0;
        list-style-type: none;
        li
          display: inline-block;
          a
            padding: 4px;
            background: #000;
            font-size: 18px;
            color: #fff;
            border-radius: 20px;
            width: 25px;
            height: 25px;
            display: block;
            margin-left: 8px;
            text-align: center;
            line-height: 26px;
    input
      width: 250px;
      margin-bottom: 18px;
      background: #E2E4E3;
      border:none;
      padding: 8px;

    button
      height: 28px;
      width: 59px;
      font-size: 14px;

    textarea
      width: 250px;
      margin-bottom: 18px;
      background: #E2E4E3;
      border:none;
      padding: 8px;
      height: 135px;
      resize: none;
    &.ng-hide-add,
    &.ng-hide-remove
      transition: 0.5s linear all;
      -webkit-transition: 0.5s linear all;
      display: block !important;
      &.ng-hide
        top: -600px;      

.info
  position: absolute;
  top: 40%;
  z-index: 999;
  width: 100%;
  text-align: center;
  h1.logo
    height: 76px;
    position: relative;
    background-image: url("../img/logo.png")
    text-indent: -999em;
    background-size: contain
    background-position:center
    background-repeat:no-repeat
    

  span
    width:100%;
    display:block;
    font-style: italic;
    text-shadow: 1px 1px 0px #000;
    font-size: 20px;
    letter-spacing: 1px;

.home-links
  position: absolute;
  z-index: 999;
  bottom: 0;
  width: 100%;
  text-align: center;
  ul
    list-style-type: none;
    padding: 0;
    display: inline-block;
    width:100%
    max-width:960px
    min-width:320px
    margin:0
    li
      width:30%
      display:inline-block
      border: 2px solid #FFF;
      &.second      
        border-left: 0 none
        border-right: 0 none            
      a
        display:inline-block;
        width:100%
        background:#000
        font-size: 24px;
        letter-spacing: 1px;
        margin: 0;
        padding:10px 0
        &:hover
          color:#eee
          background:#333




.about-content
  position: absolute;
  top: 200px;
  z-index: 999;
  width: 100%;
  p
    width: 400px;
    margin: 15px auto;
    text-align: justify;

  .social
    width: 400px;
    margin: 0 auto;
    ul
      list-style-type: none;
      display: inline;
      padding: 0;
      li
        display: inline-block;
        text-align: right;
        a
          color:#000;
          background:#fff;
          color: #000;
          border-radius: 20px;
          width: 24px;
          display: block;
          height: 24px;
          line-height: 24px;
          text-align: center;
          margin-left: 8px;
          font-size: 12px;

      .email
        float: left;
        a
          color: #FFF;
          background: none;
          border-radius: none;
          width: inherit;
          display: block;
          height: inherit;
          text-decoration: underline;
          margin-left: 0;
          margin-right: 237px;
          font-size: 14px;


.detail-content
  position: absolute;
  top: 200px;
  z-index: 999;
  width: 400px;
  right: 100px;
  .detail-content-box
    header
      background: rgba(255,255,255,0.7);
      color: #000;
      width: 100%;
      float: left;
      padding: 15px 15px;
      cursor: pointer;
      h3
        float: left;
        font-size: 18px;
        margin: 0;

      h4
        float: left;
        margin: 0;

      i.info
        position: absolute;
        right: -24px;
        top: 0;
        width: 50px;
        height: 49px;
        border-radius: 40px;
        line-height: 49px;
        background: #000;
        color: #FFF;
        font-size: 22px;
    .detail-content-text
      background: rgba(0,0,0,0.8);
      padding: 20px 15px;
      float: left;
      width: 100%;
      p
        line-height: 20px;
        margin-bottom: 15px;

      q
        margin-bottom: 15px;
        display: block;
      &.ng-hide-add,
      &.ng-hide-remove
        transition: 0.5s linear all;
        -webkit-transition: 0.5s linear all;
        display: block !important;
      &.ng-hide
        opacity: 0;


.work-content
  z-index: 999;
  width: 1455px;
  margin: 65px auto;
  .work-block
    width: 425px;
    height: 240px;
    background: #000;
    float: left;
    display:inline-block;
    margin: 27px;
    position: relative;
    figcaption
      bottom: 0;
      left: 0;
      position: absolute;
      width: 405px;
      background: #000;
      color: #FFF;
      padding: 10px;
      h4
        margin: 0;
        font-size: 12px;

.flexslider
  margin:0;
  border: none;
  .slides
    margin:0;
    padding:0;
    img
      margin:0;
      padding:0;
      width:100%;
      height:100%;
  .flex-control-nav
    top: 10px
    z-index: 900
    left:7px
    width:auto
    li
      margin-bottom: 10px
      display: block
      a
        border: 1px solid #FFF;
        box-shadow: none;
        background: rgba(0,0,0,0);
        width: 12px;
        height: 12px;
      .flex-active
        background: #FFF;
button
  background: black;
  border: none;
  color: white;

.mobile-nav-toggle
  display:none

@media only screen and (min-device-width: 320px) and (max-device-width: 479px) and (orientation: portrait) {
  

.mobile-nav-toggle{
  width:20px
  height:20px
  text-indent: -9999px
  display: block
  float:right
  cursor:pointer
  margin:10px 15px 0 0
  div{
    width:100%
    display:block
    margin-bottom:3px
    border-top:3px solid #fff
    float:left
  }  
}
    
.work-content{
  width:100%  
  margin:20px 0
  .work-block{
    clear:left
    margin:0 0 20px 0
    width:100%
    height:200px
    
    img{
      max-width:100%
    }
    .figcaption-wrap{
      h4{
        font-size:10px
      }
    }
  }
}

body.public.about, body.public.home{
  background:none
}

body.public{
  background:none
  .navigation{
    .nav-wrapper-inner{
      width:100%
      display:block
      background:#000
      overflow:auto        
      nav{
        width:45%
        float:left
        padding:10px 0
        ul{
          li{
            width:100%
            display:block;
          }
        }
      }
      nav.social{
        float:right
        width: 100px
        ul{
          li{
            float:right
            width:auto
          }
        }
      }
    }  
    .nav-wrapper-inner.ng-hide-add,
    .nav-wrapper-inner.ng-hide-remove{
      transition: 0.3s linear all;
      -webkit-transition: 0.3s linear all;
      display: block !important;    
    }
    .nav-wrapper-inner.ng-hide{
      opacity: 0;
    }
  }
    
  .contact-container{
    top:35px
    width:310px
    height:440px
    input{
      width:280px
    }
    textarea{
      width:280px
    }
    a.close-form{
      color: #999
      float: right
      font-weight: bold
      margin: 15px 20px 0 0
    }
  }
}  




